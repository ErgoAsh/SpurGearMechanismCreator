<Window x:Class="SpurGearMechanismCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:controls="clr-namespace:WpfMath.Controls;assembly=WpfMath"
		xmlns:table="clr-namespace:SpurGearMechanismCreator.Calculations"
        xmlns:local="clr-namespace:SpurGearMechanismCreator"
        mc:Ignorable="d"
        Title="SpurGearMechanismCreator" Height="1080" Width="1920" WindowState="Maximized">
	<Window.Resources>
		<BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

		<Style x:Key="CollapsibleColumnStyle" TargetType="TextBlock">
			<Setter Property="Visibility" Value="Visible"/>
			<Style.Triggers>
				<DataTrigger Binding="{Binding AreValuesShared}" Value="True">
					<Setter Property="Visibility" Value="Collapsed"/>
				</DataTrigger>
			</Style.Triggers>
		</Style>
	</Window.Resources>
	<Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.75*" />
                <ColumnDefinition Width="0.25*" />
            </Grid.ColumnDefinitions>

            <TabControl Margin="5,5,0,5" Grid.Column="0">
                <TabItem Header="View">
					<Grid>
						<Grid Grid.ZIndex="2" >
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="2*"/>
								<ColumnDefinition Width="*"/>
								<ColumnDefinition Width="2*"/>
							</Grid.ColumnDefinitions>

							<Grid.RowDefinitions>
								<RowDefinition Height="9*"/>
								<RowDefinition Height="60"/>
								<RowDefinition Height="*"/>
							</Grid.RowDefinitions>

							<Border Grid.Column="1" Grid.Row="1" BorderBrush="Gray" BorderThickness="1,1,1,1" Background="White">
								<StackPanel Orientation="Vertical">
									<Slider Minimum="2" Maximum="15" Value="7" Margin="5,5,5,0" ValueChanged="OnSliderValueChanged"/>
									<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
										<Button Margin="2,10,5,2" Height="22" Width="22" Click="OnStartButtonClick">
											<TextBlock Text="&#9654;" HorizontalAlignment="Center" VerticalAlignment="Center"/>
										</Button>
										<Button Margin="5,10,2,2" Height="22" Width="22" Click="OnStopButtonClick">
											<TextBlock Text="&#9208;" HorizontalAlignment="Center" VerticalAlignment="Center"/>
										</Button>
									</StackPanel>
								</StackPanel>
							</Border>
						</Grid>
						
						<Border Grid.ZIndex="1" ClipToBounds="True">
							<Canvas x:Name="GearCanvas">
								<Canvas.RenderTransform>
									<TransformGroup>
										<ScaleTransform x:Name="ScaleTransformation" ScaleX="7" ScaleY="-7"/>
										<TranslateTransform
                                        X="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}"
                                        Y="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Canvas}}"/>
										<TranslateTransform x:Name="TranslateTransformObject"
										X="{Binding Path=OriginPoint.X}"
										Y="{Binding Path=OriginPoint.Y}"/>
										<ScaleTransform ScaleX="0.5" ScaleY="0.5"/>
									</TransformGroup>
								</Canvas.RenderTransform>
							</Canvas>
						</Border>
					</Grid>
				</TabItem> 
				<TabItem Header="Data">
					<DataGrid x:Name="DataTable" GridLinesVisibility="All" AutoGenerateColumns="False" IsReadOnly="True">
						<DataGrid.Columns>
							<DataGridTextColumn Binding="{Binding Name}" 
												Header="Name" 
												Width="4*"
												FontFamily="Times New Roman"
												FontSize="16"/>
							<DataGridTemplateColumn Header="Symbol and formula" Width="4*">
								<DataGridTemplateColumn.CellTemplate>
									<DataTemplate>
										<controls:FormulaControl Formula="{Binding Formula}" Margin="13,5,3,3" />
									</DataTemplate>
								</DataGridTemplateColumn.CellTemplate>
							</DataGridTemplateColumn>
							<DataGridTextColumn x:Name="CollapsibleColumn" 
												Binding="{Binding ValueSecondary, StringFormat={}{0:F2}}" 
												Header="Pinion" 
												Width="1*"
												FontFamily="Times New Roman"
												FontSize="16"/>
							<DataGridTextColumn Binding="{Binding Value, StringFormat={}{0:F2}}" 
												Header="Gear" 
												Width="*" 
												FontFamily="Times New Roman"
												FontSize="16"/>
						</DataGrid.Columns>
					</DataGrid>
				</TabItem>
            </TabControl>
            
            <StackPanel Grid.Column="1" Margin="25,25,25,25">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type StackPanel}">
                        <Setter Property="Margin" Value="0,10,0,0"/>
                    </Style>
                </StackPanel.Resources>

                <StackPanel>
                    <TextBlock Text="Module"/>
                    <TextBox x:Name="ModuleTextBox" Text="11"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Z1"/>
                    <TextBox x:Name="Z1TextBox" Text="13"/>
                </StackPanel>
                
                <StackPanel>
                    <TextBlock Text="Z2"/>
                    <TextBox x:Name="Z2TextBox" Text="47"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="x1"/>
                    <TextBox x:Name="X1TextBox" Text="0,80"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="x2"/>
                    <TextBox x:Name="X2TextBox" Text="0,6032"/>
                </StackPanel>

                <StackPanel Margin="0,25,0,0">
                    <Button Click="OnClick">
                        <TextBlock Text="Calculate"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
